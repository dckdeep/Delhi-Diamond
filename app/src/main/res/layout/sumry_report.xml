<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_border"
        android:padding="3dp"
        android:id="@+id/view_full_report"
        android:layout_below="@id/points_report_layout"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/redbox"
                android:textColor="#fff"
                android:textStyle="bold"
                android:id="@+id/date_and_time"
                android:fontFamily="@font/abeezee"
                android:text="Date :- DD:MM:YYYY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:background="@drawable/black_border">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="70dp"
                            android:id="@+id/card_display"
                            android:src="@drawable/check_coins"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="165dp"
                    android:layout_height="25dp"
                    android:textStyle="bold"
                    android:text="Coins:- "
                    android:gravity="center|right"
                    android:fontFamily="@font/abeezee"
                    android:textColor="#045F08"/>
                <TextView
                    android:layout_width="165dp"
                    android:layout_height="25dp"
                    android:text="0"
                    android:paddingLeft="3dp"
                    android:textColor="#000"
                    android:id="@+id/closing_amount"
                    android:gravity="center|left"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>