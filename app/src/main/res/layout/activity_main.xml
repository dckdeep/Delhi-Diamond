<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/delhi_diamond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/delhi_diamond_logo"
            android:scaleType="fitXY" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_below="@id/delhi_diamond">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:id="@+id/if_userid_is_wrong"
            android:textColor="#B80606"/>
        <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:id="@+id/email_layout"
    android:background="@drawable/black_border">
<RelativeLayout
    android:layout_width="250dp"
    android:layout_height="40dp">

    <ImageView
        android:id="@+id/email_icon"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/mail"
        android:scaleType="fitXY"
        android:layout_toStartOf="@+id/email" />

    <RelativeLayout
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_alignParentRight="true">

        <EditText
            android:id="@+id/userid_textinput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="User ID"
            android:inputType="textEmailAddress"
            android:textSize="15dp"
            android:background="@null"
            app:met_floatingLabel="normal" />
    </RelativeLayout>
</RelativeLayout>





</RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:layout_marginTop="8dp"
            android:id="@+id/if_pass_is_wrong"
            android:textColor="#B80606"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/pass_layout"

            android:layout_below="@id/email_layout"
            android:background="@drawable/black_border">
            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/pass_icon"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/pasword"
                    android:scaleType="fitXY"
                    android:layout_toStartOf="@+id/pass" />

                <RelativeLayout
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/pass"
                    android:layout_alignParentRight="true">

                    <EditText
                        android:id="@+id/passtextinput"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textSize="15dp"
                        android:background="@null"
                        app:met_floatingLabel="normal" />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgot_layout"
            android:layout_below="@id/pass_layout"
            android:layout_marginTop="3dp">
            <RelativeLayout
                android:layout_width="260dp"
                android:layout_height="20dp">

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />

               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_marginLeft="0dp"
                   android:gravity="center"
                   android:layout_toEndOf="@+id/checkbox"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="20dp"
                       android:textSize="10dp"
                       android:gravity="center"
                       android:text="Remember Me" />
               </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Forgot Password?"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/login_layout"
            android:layout_marginTop="10dp"
            android:layout_below="@id/forgot_layout">
            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Login"
                android:textColor="#fff"
                android:id="@+id/login"
                android:textAllCaps="false"
                android:background="@drawable/login"/>
        </RelativeLayout>



</LinearLayout>

</RelativeLayout>
</RelativeLayout>