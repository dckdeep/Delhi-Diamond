<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Dashboard"
    android:background="@drawable/dashboardbg"
    tools:showIn="@layout/app_bar_dashboard">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/close_card_layout"
    android:layout_marginTop="20dp"
    android:paddingLeft="15dp"
    android:layout_marginBottom="20dp">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/closecard_recycler"
        android:nestedScrollingEnabled="false"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/strtlayout"
        android:id="@+id/text_layout"
        android:layout_marginRight="12dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/black_border"
            android:padding="5dp"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:gravity="center"
                android:text="खेल के नियम"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#256105"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/text_rules"
                android:background="#ECE8E8"
                android:text="जीतने पर 10 के 120 पॉइंट्स मिलेंगे, 10 से कम की  बेट नहीं लगेगी ।"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="12dp"
                android:id="@+id/hinditext_rules"
                android:text="कृपया ऊपर ददी गई गये कार्ड्स में से कोई चुनें ।"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/strtlayout"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="8dp">
        <Button
            android:layout_width="150dp"
            android:background="@drawable/login"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:id="@+id/startgame"
            android:textAllCaps="false"
            android:text="Lets Get Started"/>
    </RelativeLayout>
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rotaion_view"
    android:background="@drawable/dashboardbg"
    android:gravity="center">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/backcard"
        android:id="@+id/rotation_card1"
        android:scaleType="fitCenter"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/backcard"
        android:id="@+id/rotation_card2"
        android:scaleType="fitCenter"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/backcard"
        android:id="@+id/rotation_card3"
        android:scaleType="fitCenter"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/backcard"
        android:id="@+id/rotation_card4"
        android:scaleType="fitCenter"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/backcard"
        android:id="@+id/rotation_card5"
        android:scaleType="fitCenter"/>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/backcard"
        android:id="@+id/rotation_card6"
        android:scaleType="fitCenter"/>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/backcard"
        android:id="@+id/rotation_card7"
        android:scaleType="fitCenter"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/backcard"
        android:id="@+id/rotation_card8"
        android:scaleType="fitCenter"/>


</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/second_drop_shuffle"
        android:background="@drawable/dashboardbg"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/rotation_card1221"
            android:scaleType="fitCenter"/>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:id="@+id/rotation_card122"
                android:scaleType="fitCenter"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:gravity="left">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:id="@+id/rotation_card122_"
                android:scaleType="fitCenter"/>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:gravity="right">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:id="@+id/rotation_card12_2_"
                android:scaleType="fitCenter"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:id="@+id/rotation_card1_2_2_"
                android:scaleType="fitCenter"
                android:layout_marginBottom="150dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:id="@+id/rotation_card1_2__2_"
                android:scaleType="fitCenter"
                android:layout_marginBottom="150dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lock_bid"
        android:gravity="center">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/lock_bid__icon"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:text=""
            android:textSize="40dp"
            android:id="@+id/lock_bid_text"
            android:gravity="center|top"
            android:textStyle="bold"
            android:fontFamily="@font/abeezee"
            android:textColor="#fff"/>
    </LinearLayout>
</RelativeLayout>