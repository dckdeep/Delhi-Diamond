    android:background="#D266340D"

    tools:showIn="@layout/app_bar_delhi_diamond">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:id="@+id/first_layout"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:id="@+id/game_logo_inside"
            android:background="@drawable/game_inside_background" />
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/black_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/user_name"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:fontFamily="@font/abeezee"
                android:gravity="center"
                android:padding="3dp"
                android:text="TOTAL (Coins)"
                android:textColor="#832D05"
                android:textSize="15dp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/title_img"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/total_coins"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:gravity="center|left"
            android:textColor="#000"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/send_points"
            android:text="0"
            android:textSize="18dp" />
        </LinearLayout>
