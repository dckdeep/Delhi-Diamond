<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/first_layout"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/user_name"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:fontFamily="@font/abeezee"
            android:gravity="center"
            android:padding="3dp"
            android:text="user name"
            android:textColor="#832D05"
            android:textSize="15dp"
            android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/title_img"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/player_current_coins"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/send_points"
            android:background="@drawable/redbox"
            android:text="Get \n Points"
            android:textSize="7dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="left"
            android:id="@+id/send_points"
            android:background="@drawable/greenbox"
            android:text="Send Coins"
            android:textSize="7dp"
            android:gravity="center"
            android:textColor="#000"/>
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:background="#000"
    android:layout_below="@id/first_layout"></RelativeLayout>
</RelativeLayout>