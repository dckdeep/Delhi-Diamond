                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="40dp"
                                    android:text="Users:"
                                    android:fontFamily="@font/abeezee"
                                    android:textSize="15dp"
                                    android:textColor="#fff"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:text="0"
                                    android:fontFamily="@font/abeezee"
                                    android:textSize="20dp"
                                    android:id="@+id/desawar_button_users"
                                    android:textColor="#fff"
                                    android:gravity="center|left"/>
                            </LinearLayout>
                            <ImageView

                                android:layout_width="match_parent"
                                android:layout_height="50dp"

                                android:id="@+id/desawar"
                                android:scaleType="fitXY"  />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginRight="20dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/ajent_dashboard_points_display"
                            android:layout_width="130dp"
                            android:gravity="center"
                            android:layout_height="120dp"
                            android:background="@drawable/home_background">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:text="Check Your coins View"
                                    android:fontFamily="@font/abeezee"
                                    android:textSize="15dp"
                                    android:textColor="#fff"
                                    android:gravity="center"/>

                            </LinearLayout>
                            <ImageView
                                android:fontFamily="@font/abeezee"
                                android:textColor="#000"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"

                                android:id="@+id/check_coins"
                                android:scaleType="fitCenter"  />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="30dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/List_of_users"
                            android:layout_width="130dp"
                            android:layout_height="120dp"
                            android:gravity="center"
                            android:background="@drawable/home_background">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:text="List of Users"
                                    android:fontFamily="@font/abeezee"
                                    android:textSize="15dp"
                                    android:textColor="#fff"
                                    android:gravity="center"/>

                            </LinearLayout>
                            <ImageView

                                android:layout_width="match_parent"
                                android:layout_height="50dp"

                                android:id="@+id/list_of_users"
                                android:scaleType="fitXY"  />
                        </LinearLayout>

