<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lucky7">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="200dp"
                    android:id="@+id/counting_layout"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_height="?attr/actionBarSize">
                    <RelativeLayout
                        android:layout_width="120dp"
                        android:background="#832D05"
                        android:padding="4dp"
                        android:gravity="center"
                        android:layout_height="?attr/actionBarSize">

                        <ImageView
                            android:id="@+id/icon_card"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="fitCenter"
                             />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="0"
                            android:gravity="top"
                            android:id="@+id/total_bet_amount"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:layout_marginStart="2dp"
                            android:layout_toEndOf="@+id/icon_card" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:id="@+id/watch_layout"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        android:id="@+id/watch"
                        android:src="@drawable/watch"/>

                    <TextView
                        android:layout_width="50dp"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_toStartOf="@+id/watch"
                        android:text="--:--"
                        android:id="@+id/timer_text"
                        android:textSize="18dp" />
                </RelativeLayout>
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_lucky7" />

</android.support.design.widget.CoordinatorLayout>