<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:padding="3dp"
    >
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="fill_parent"
      android:id="@+id/coins_report_scrolling">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
      <Button
          android:layout_width="70dp"
          android:layout_height="40dp"
          android:id="@+id/refresh_coins"
          android:background="@drawable/blue_border"
          android:text="Refresh"
          android:gravity="center"
          android:textColor="#fff"
          android:layout_above="@id/last_layout"
          android:textSize="15dp"
          android:textAllCaps="false"
          android:layout_marginBottom="5dp"
          android:fontFamily="@font/abeezee"
          android:layout_alignParentRight="true"/>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:id="@+id/first_layout"
          android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Coins Report"
            android:gravity="center"
            android:id="@+id/heading_text"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/abeezee"
            android:textColor="#044B06"
            android:background="@drawable/black_border"
            />
      </RelativeLayout>
      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/last_layout"
          android:scrollbars="horizontal"
          android:layout_below="@id/first_layout">
        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@id/last_layout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">
              <android.support.v7.widget.RecyclerView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/nos_recycler_view"
                  android:layout_below="@id/refresh_coins"
                  android:nestedScrollingEnabled="false"
                  ></android.support.v7.widget.RecyclerView>
              <RelativeLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vertical_layout_number"
                    android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_below="@id/vertical_layout_number"
                    android:id="@+id/coins_report_recycler_view"
                    android:background="@drawable/black_whiteblack_border"

                    ></android.support.v7.widget.RecyclerView>

              </RelativeLayout>
              <android.support.v7.widget.RecyclerView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/count_recycler"
                  android:nestedScrollingEnabled="false"
                  ></android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3dp"
                android:gravity="right">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Jantri Amount:"
                  android:fontFamily="@font/abeezee"
                  android:textColor="#000"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="3dp"
                  android:text="----"
                  android:textStyle="bold"
                  android:fontFamily="@font/abeezee"
                  android:id="@+id/jantri_amount_text"
                  android:textColor="#000"
                  />
            </LinearLayout>
          </LinearLayout>
        </HorizontalScrollView>
      </ScrollView>
      <android.support.v7.widget.RecyclerView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/nos_andar_bahar_recycler_view"
          android:layout_below="@id/last_layout"
          android:nestedScrollingEnabled="false"

          ></android.support.v7.widget.RecyclerView>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="3dp"
          android:id="@+id/last_layout_of_reoport"
          android:background="@drawable/black_whiteblack_border"
          android:layout_below="@id/nos_andar_bahar_recycler_view">

        <android.support.v7.widget.RecyclerView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/andar_layout_amount"
            android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/andar_layout_amount"
            android:layout_margin="3dp"
            android:id="@+id/bahar_layout_amount"
            android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>
      </RelativeLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/last_view_total_report"
          android:layout_marginTop="3dp"
          android:layout_below="@id/last_layout_of_reoport"
          android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andar Amount:"
            android:fontFamily="@font/abeezee"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----"
            android:textStyle="bold"
            android:fontFamily="@font/abeezee"
            android:id="@+id/andar_amount_text"
            android:textColor="#000"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_below="@id/last_view_total_report">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Bahar Amount:"
              android:fontFamily="@font/abeezee"
              android:textColor="#000"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="----"
              android:textStyle="bold"
              android:fontFamily="@font/abeezee"
              android:id="@+id/bahar_amount_text"
              android:textColor="#000"
              />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Total Amount:"
              android:fontFamily="@font/abeezee"
              android:textColor="#000"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="----"
              android:textStyle="bold"
              android:fontFamily="@font/abeezee"
              android:layout_marginRight="3dp"
              android:id="@+id/total_amount_text_of_jantri"
              android:textColor="#000"
              />

        </LinearLayout>
      </LinearLayout>
    </RelativeLayout>
  </ScrollView>
</RelativeLayout>