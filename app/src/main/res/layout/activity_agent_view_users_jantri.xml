<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".agent_view_users_jantri">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fisrt_layout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:text="List Of The Users"
                android:textColor="#000"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                android:fontFamily="@font/abeezee"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:src="@drawable/title_img"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/second_layout"
            android:layout_height="?attr/actionBarSize">

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/third_layout"
            android:layout_below="@id/second_layout">

            <RelativeLayout
                android:background="@drawable/black_border"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/first_layout"
                android:padding="3dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"

                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/abeezee"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="USER'S NAMES"
                        android:textColor="#832D05"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/title_img"/>
                    </RelativeLayout>
                </RelativeLayout>
              <!--  <TextView
                    android:id="@+id/get_points"
                    android:layout_width="60dp"

                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:textColor="#000"

                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@+id/send_points"
                    android:background="@drawable/redbox"
                    android:text="Total Points"
                    android:fontFamily="@font/abeezee"
                    android:textSize="7dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="left"
                    android:id="@+id/send_points"
                    android:background="@drawable/greenbox"
                    android:text="Coins"
                    android:gravity="center"
                    android:textColor="#000"
                    android:fontFamily="@font/abeezee"
                    android:textSize="7dp" />-->
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/fourth_layout"
            android:layout_below="@id/third_layout">
            <Button
                android:id="@+id/full_jantri"
                android:layout_width="200dp"
                android:gravity="center"
                android:text="Final Jantri"
                android:textAllCaps="false"
                android:fontFamily="@font/abeezee"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:layout_height="40dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/fourth_layout">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_points_working"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>